{
    "compilerOptions":{
        "rootDirs":["typescript"],
        "baseUrl": "./",
        "paths": {
            "CellType/*": ["typescript/CellType/*"],
            "Grid/*": ["typescript/Grid/*"]
        },
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "sourceMap": true,
        "target": "ES5",
		"typeRoots": ["node_modules/@types"]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
